# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.editorconfig text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files (no conversion)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
